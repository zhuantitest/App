{
  "name": "bookkeeper-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "prisma": {
    "seed": "ts-node -P tsconfig.seed.json prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "ocr": "ts-node src/testVision.ts",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:seed": "ts-node -P tsconfig.seed.json prisma/seed.ts",
    "monthly-split": "ts-node -P tsconfig.scripts.json scripts/monthlySplitJob.ts",
    "monthly-allowance": "ts-node -P tsconfig.scripts.json scripts/monthlyAllowanceJob.ts",
    "credit-reset": "ts-node -P tsconfig.scripts.json scripts/creditCardReset.ts",
    "test:integration": "jest --testPathPattern=tests/.*\\.integration\\.test\\.ts",
    "test:ai-improvements": "ts-node -P tsconfig.scripts.json scripts/test-ai-improvements.ts",
    "test:voice-improvements": "ts-node -P tsconfig.scripts.json scripts/test-voice-improvements.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/.*\\.test\\.ts",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@google-cloud/documentai": "^9.4.0",
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/vision": "^5.3.2",
    "@huggingface/inference": "^4.6.1",
    "@prisma/client": "^6.15.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "sharp": "^0.34.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.17.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "prisma": "^6.15.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  }
}
